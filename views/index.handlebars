<div class="container">
  <div class="row">
    <div class="col">
      <h1>Eat-Da-Burger</h1>
    </div>

  </div>
  <div class="row">
    <div class="col">
      <h2>Burgers ready to be devoured!</h2>

      <ul>
        {{#each cats}}
        {{#unless sleepy}}
        {{> cats/cat-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers already devoured!</h2>

      <ul>
        {{#each cats}}
        {{#if sleepy}}
        {{> cats/cat-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="col">
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Cat Name:</label>
          <input type="text" id="burg" name="name">
          <button type="submit" name="devoured" value="0">Submit</button>
          <p>Enter a burger you would like to eat. Click the "Submit" button
          <p>
        </div>
      </form>
    </div>
  </div>
</div>