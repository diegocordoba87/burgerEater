<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>Eat-Da-Burger</h1>
      <img src="/assets/img/burgerImage.png" alt="burger" />
    </div>

  </div>
  <div class="row">
    <div class="col">
      <h2>Burgers ready to be devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li class="newBurger">
          <p>{{this.id}} {{this.name}}<button class="change-devoured btn btn-sm" data-id="{{id}}"
              devourState="{{devoured}}">DEVOUR</button></p>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers already devoured!</h2>

      {{#each burgers}}
      {{#if devoured}}
      <ul>
        <li>
          <p>{{this.id}}
            {{this.name}}</p>
        </li>
      </ul>

      {{/if}}
      {{/each}}

    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <form class="create-form">
        <div class="form-group">
          <label for="burg">Burger Name</label>
          <input type="text" id="burger">
          <button class="btn" type="submit">Submit</button>
          <p>Enter a burger you would like to eat. Click the "Submit" button
          <p>
        </div>
      </form>
    </div>
  </div>
</div>